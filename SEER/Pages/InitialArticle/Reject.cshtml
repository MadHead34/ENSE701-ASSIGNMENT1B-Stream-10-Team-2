@page
@model SEER.RejectModel

@{
    ViewData["Title"] = "Reject";
}

<h1>Reject an Article</h1>

<h3>Are you sure you want to reject this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InitialArticle.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InitialArticle.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InitialArticle.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InitialArticle.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InitialArticle.Source)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InitialArticle.Source)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InitialArticle.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InitialArticle.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InitialArticle.DOI)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InitialArticle.DOI)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="InitialArticle.ID" />
        <input type="submit" value="Reject" class="btn btn-danger" /> |
        <a asp-page="./Moderate">Back to List</a>
    </form>
</div>
