@page
@model SEER.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>References</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Title: <input type="text" asp-for="SearchTitle" />
        Source: <select asp-for="SearchSource" asp-items="Model.Sources">
            <option value="">All</option>
        </select>
        Year: <input type="number" value="1970" min="1970" max="2020" asp-for="SearchYearStart" />
        to <input type="number" value="2020" min="1970" max="2020" asp-for="SearchYearEnd" />
        DOI: <input type="text" asp-for="SearchDOI" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BibliographicReference[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BibliographicReference[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BibliographicReference[0].Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BibliographicReference[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BibliographicReference[0].Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BibliographicReference[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BibliographicReference[0].PageNumbers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BibliographicReference[0].DOI)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BibliographicReference) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageNumbers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOI)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
