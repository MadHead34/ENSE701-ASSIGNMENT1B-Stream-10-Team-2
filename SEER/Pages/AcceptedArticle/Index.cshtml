@page
@model SEER.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Articles to be Analysed</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AcceptedArticle[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcceptedArticle[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcceptedArticle[0].Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcceptedArticle[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcceptedArticle[0].DOI)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AcceptedArticle) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOI)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Accept</a>
            </td>
        </tr>
}
    </tbody>
</table>
